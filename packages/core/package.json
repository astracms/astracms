{
  "name": "@astracms/core",
  "version": "1.0.0",
  "description": "Core API client, types, and schemas for AstraCMS integrations",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "astracms",
    "cms",
    "headless-cms",
    "blog",
    "api-client"
  ],
  "author": "AstraCMS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/astracms/astracms",
    "directory": "packages/core"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
