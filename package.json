{
  "name": "astracms",
  "private": true,
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart",
    "db:migrate": "pnpm --filter @astra/db db:migrate",
    "db:deploy": "pnpm --filter @astra/db db:deploy",
    "db:generate": "pnpm --filter @astra/db db:generate",
    "db:studio": "pnpm --filter @astra/db db:studio",
    "db:push": "pnpm --filter @astra/db db:push",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "pnpx ultracite@latest check",
    "format": "pnpx ultracite@latest fix",
    "web:dev": "turbo dev --filter=web",
    "cms:dev": "turbo dev --filter=cms",
    "api:dev": "turbo dev --filter=api",
    "docs:dev": "turbo dev --filter=docs",
    "cms:build": "turbo build --filter=cms",
    "web:build": "turbo build --filter=web",
    "docs:build": "turbo build --filter=docs",
    "test": "turbo test"
  },
  "devDependencies": {
    "@astra/tsconfig": "workspace:*",
    "@biomejs/biome": "^2.3.0",
    "prettier": "^3.7.4",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "ultracite": "6.3.6"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.2",
      "@types/react-dom": "19.0.2"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "bufferutil",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver",
      "workerd"
    ]
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
