{
  "name": "astracms",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart",
    "db:migrate": "pnpm --filter @astra/db db:migrate",
    "db:deploy": "pnpm --filter @astra/db db:deploy",
    "db:generate": "pnpm --filter @astra/db db:generate",
    "db:studio": "pnpm --filter @astra/db db:studio",
    "db:push": "pnpm --filter @astra/db db:push",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "pnpx ultracite@latest check",
    "format": "pnpx ultracite@latest fix",
    "typecheck": "turbo typecheck",
    "web:dev": "turbo dev --filter=web",
    "cms:dev": "turbo dev --filter=cms",
    "api:dev": "turbo dev --filter=api",
    "docs:dev": "turbo dev --filter=docs",
    "cms:build": "turbo build --filter=cms",
    "web:build": "turbo build --filter=web",
    "docs:build": "turbo build --filter=docs",
    "test": "turbo test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "turbo build --filter='@astracms/*' && changeset publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "pnpx ultracite@latest fix"
  },
  "devDependencies": {
    "@astra/tsconfig": "workspace:*",
    "@biomejs/biome": "^2.3.0",
    "@changesets/cli": "^2.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "ultracite": "6.3.6"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0"
    }
  }
}
