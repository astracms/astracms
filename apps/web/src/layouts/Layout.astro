---
import FooterComponent from "@/components/Footer.astro";
import HeadComponent from "@/components/Head.astro";
import HeaderComponent from "@/components/Header.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <HeadComponent title={title} description={description} image={image}/>
    <script
      src="https://cdn.databuddy.cc/databuddy.js"
      data-client-id="4-KAEZVpa2ZPahKtH3w7D"
      crossorigin="anonymous"
      async
    ></script>
  </head>
  <body>
    <HeaderComponent/>
    <main>
      <slot/>
    </main>
    <FooterComponent/>
    <ScrollToTop/>
  </body>
</html>
