---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"div"> {}
const { class: classNames, ...attrs } = Astro.props;
---

<div
  {...attrs}
  class={cn(
    "h-full mx-auto w-full max-w-5xl px-5 sm:px-6 md:px-8 lg:px-12",
    classNames,
  )}
>
  <slot/>
</div>
