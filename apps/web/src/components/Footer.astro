---
import { FOOTER_SECTIONS, FOOTER_SOCIAL_LINKS } from "@/lib/constants";
import Container from "./Container.astro";
import Logo from "./icons/Logo.astro";
---

<footer class="border-t border-border/50 bg-background">
  <Container>
    <div class="py-16 lg:py-20">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-12 lg:gap-8">
        <!-- Brand Section -->
        <div class="lg:col-span-4 flex flex-col gap-5">
          <a
            href="/"
            class="flex items-center gap-2.5 transition-opacity duration-300 hover:opacity-70"
          >
            <Logo />
            <span class="text-lg font-semibold tracking-tight">AstraCMS</span>
          </a>
          <p class="text-muted-foreground max-w-xs text-sm leading-relaxed">
            Simple content management for modern apps. Built for developers who
            care about design and performance.
          </p>
        </div>

        <!-- Links Sections -->
        <div class="lg:col-span-8 grid grid-cols-2 gap-8 sm:grid-cols-4">
          {
            FOOTER_SECTIONS.map((section) => (
              <div class="flex flex-col gap-4">
                <h3 class="text-sm font-medium text-foreground">
                  {section.title}
                </h3>
                <ul class="flex flex-col gap-3">
                  {section.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        target={link.target}
                        rel={link.rel}
                        class="text-sm text-muted-foreground transition-colors duration-300 hover:text-foreground"
                      >
                        {link.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div
      class="border-t border-border/50 py-6 flex flex-col items-center gap-4 sm:flex-row sm:justify-between"
    >
      <p class="text-xs text-muted-foreground">
        &copy; {new Date().getFullYear()} AstraCMS. All rights reserved.
      </p>

      <div class="flex items-center gap-5">
        {
          FOOTER_SOCIAL_LINKS.map((link) => {
            const IconComponent = link.icon;
            return (
              <a
                href={link.href}
                target={link.target}
                rel={link.rel}
                class="text-muted-foreground transition-colors duration-300 hover:text-foreground"
                aria-label={link.label}
              >
                {IconComponent && <IconComponent class="size-5" />}
              </a>
            );
          })
        }
      </div>
    </div>
  </Container>
</footer>
