---
import { Image } from "astro:assets";
import editorImage from "@/assets/images/editor.png";
import Container from "@/components/Container.astro";
import AccordionItem from "@/components/ui/AccordionItem.astro";
import Layout from "@/layouts/Layout.astro";
import { FAQs, PRICING, SITE } from "@/lib/constants";
import { cn } from "@/lib/utils";
---

<Layout
  title={`${SITE.TITLE} - Super Simple Headless CMS`}
  description={SITE.DESCRIPTION}
>
  <!-- Hero Section -->
  <section class="relative pt-12 pb-8 md:pt-20 md:pb-16">
    <div
      class="relative max-w-7xl mx-auto gap-y-8 grid grid-cols-1 md:grid-cols-2 items-center text-center"
    >
      <div class="flex pl-2 md:pl-44 flex-col items-center md:items-start">
        <div
          class="animate-fade-in-up opacity-0"
          style="animation-delay: 0.1s;"
        >
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1 mb-8 text-xs font-medium tracking-wide border rounded-full bg-muted/50 border-border/80 text-muted-foreground"
          >
            <span
              class="size-1.5 rounded-full bg-emerald-500 animate-pulse"
            ></span>
            AI Agent is now live
          </span>
        </div>

        <h1
          class="text-center md:text-start max-w-lg text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight text-foreground leading-[1.1] text-balance animate-fade-in-up opacity-0"
          style="animation-delay: 0.2s;"
        >
          Simple content management for{" "}
          <span class="text-muted-foreground">modern apps</span>
        </h1>

        <p
          class="mt-6 text-center md:text-start max-w-xl text-base md:text-lg text-muted-foreground leading-relaxed text-balance animate-fade-in-up opacity-0"
          style="animation-delay: 0.3s;"
        >
          A clean, collaborative way to publish articles, changelogs, and
          product updates. Designed for speed and simplicity.
        </p>

        <div
          class="mt-10 flex flex-col sm:flex-row items-center gap-3 animate-fade-in-up opacity-0"
          style="animation-delay: 0.4s;"
        >
          <a
            href={SITE.APP_URL}
            target="_blank"
            rel="noopener"
            class="inline-flex h-11 items-center justify-center rounded-lg bg-foreground px-7 text-sm font-medium text-background transition-all duration-300 hover:bg-foreground/90 hover:shadow-lg hover:shadow-black/10"
          >
            Start Publishing
          </a>
          <a
            href="https://docs.astracms.dev"
            target="_blank"
            rel="noopener"
            class="inline-flex h-11 items-center justify-center rounded-lg border border-border/80 bg-background px-7 text-sm font-medium transition-all duration-300 hover:bg-muted/50 hover:border-border"
          >
            Read Documentation
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div
        class="relative w-full animate-fade-in-up opacity-0"
        style="animation-delay: 0.5s;"
      >
        <div
          class="rounded-xl border border-border/60 bg-muted/30 p-1.5 shadow-2xl shadow-black/[0.03]"
        >
          <div
            class="rounded-lg overflow-hidden bg-background border border-border/40"
          >
            <Image
              src={editorImage}
              alt="Astra CMS Editor Interface"
              loading="eager"
              class="w-full h-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-12 md:py-16 border-t border-border/50">
    <Container>
      <div class="mb-14 md:mb-16 max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-semibold tracking-tight mb-4">
          Everything you need, nothing you don't.
        </h2>
        <p class="text-muted-foreground">
          Built to get out of your way so you can focus on creating great
          content.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-5">
        <!-- Feature 1 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/[0.02]"
        >
          <div
            class="size-10 rounded-lg bg-blue-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-blue-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Media Management</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Upload and organize images in a centralized, blazing fast library.
          </p>
        </div>

        <!-- Feature 2 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/[0.02]"
        >
          <div
            class="size-10 rounded-lg bg-green-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-green-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Intuitive Editor</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            A distraction-free writing experience that just works.
          </p>
        </div>

        <!-- Feature 3 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/[0.02]"
        >
          <div
            class="size-10 rounded-lg bg-purple-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-purple-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Collaboration</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Invite your team and manage roles effortlessly.
          </p>
        </div>

        <!-- Feature 4 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/[0.02]"
        >
          <div
            class="size-10 rounded-lg bg-amber-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-amber-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Lightning Fast</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Optimized for speed, ensuring your content loads instantly.
          </p>
        </div>

        <!-- Feature 5 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/[0.02] md:col-span-2"
        >
          <div
            class="size-10 rounded-lg bg-rose-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-rose-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">API Integration</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Seamless integration with Next.js, Astro, Nuxt, and any other modern
            web framework. Fetch content comfortably.
          </p>
        </div>
      </div>
    </Container>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 md:py-28 bg-muted/30 border-t border-border/50">
    <Container class="max-w-3xl">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-semibold tracking-tight mb-4">
          Frequently Asked Questions
        </h2>
      </div>
      <div
        class="divide-y divide-border/60 border-y border-border/60 bg-background rounded-xl"
      >
        {
          FAQs.map((faq) => (
            <AccordionItem name="faq" title={faq.question} class="px-6">
              <div
                class="text-muted-foreground text-sm leading-relaxed"
                set:html={faq.answer}
              />
            </AccordionItem>
          ))
        }
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 border-t border-border/50">
    <Container>
      <div
        class="relative overflow-hidden rounded-2xl bg-foreground px-6 py-14 md:px-12 md:py-20 text-center"
      >
        <div
          class="absolute inset-0 z-0"
          style={{
            background:
              "radial-gradient(ellipse 80% 60% at 50% 0%, rgba(120, 180, 255, 0.25), transparent 70%), #000000",
          }}
        ></div>

        <div class="relative z-10 max-w-xl mx-auto space-y-6">
          <h2
            class="text-2xl md:text-4xl font-semibold tracking-tight text-background"
          >
            Ready to start writing?
          </h2>
          <p class="text-background/70 text-base">
            Join developers and teams who trust Astra for their content needs.
          </p>
          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-3 pt-2"
          >
            <a
              href={`${SITE.APP_URL}/register`}
              class="inline-flex h-11 items-center justify-center rounded-lg bg-background px-7 text-sm font-medium text-foreground transition-all duration-300 hover:bg-background/90"
            >
              Start for free
            </a>
          </div>
          <p class="text-xs text-background/50">No credit card required</p>
        </div>
      </div>
    </Container>
  </section>
</Layout>
