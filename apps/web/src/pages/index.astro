---
import Container from "@/components/Container.astro";
import AccordionItem from "@/components/ui/AccordionItem.astro";
import Layout from "@/layouts/Layout.astro";
import { FAQs, SITE } from "@/lib/constants";
---

<Layout title={SITE.TITLE} description={SITE.DESCRIPTION}>
  <!-- Hero Section -->
  <!-- Hero Section -->
  <section class="relative min-h-[85vh] h-full pt-8 sm:pt-20 pb-32 overflow-hidden bg-[#584dff]">
    <!-- Background Gradients/Shapes -->
    <div
      class="absolute inset-0 bg-linear-to-b from-[#584dff] to-[#584dff] -z-20"
    ></div>

    <Container>
      <div
        class="flex flex-col items-center text-center max-w-4xl mx-auto z-10"
      >
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl font-bold tracking-relaxed text-white leading-[1.1] mb-6 drop-shadow-sm"
        >
          The Headless CMS <br>
          for Modern Developers
        </h1>
        <p
          class="text-lg text-indigo-100 mb-4 sm:mb-10 max-w-2xl leading-relaxed"
        >
          AstraCMS is an API-first content platform. Ship blogs, changelogs, and
          product updates to any frontend with a fully typed SDK.
        </p>

        <!-- CTA Button -->
        <div class="mb-8">
          <a
            href={`${SITE.APP_URL}/register`}
            class="inline-block bg-[#A3E635] hover:bg-[#96d62f] text-slate-900 font-sans font-bold text-lg px-10 py-4 rounded-full transition-all shadow-xl hover:shadow-2xl hover:-translate-y-0.5"
          >
            Start for Free
          </a>
        </div>

        <!-- Dashboard Image -->
        <div class="relative w-full max-w-5xl -mb-48 lg:-mb-64">
          <img
            src="/hero-img.png"
            alt="Dashboard Preview"
            class="w-full h-auto drop-shadow-2xl rounded-2xl"
          >
        </div>
      </div>
    </Container>
  </section>

  <!-- Features Section -->
  <section class="py-12 md:py-16 border-t border-border/50">
    <Container>
      <div class="mb-14 md:mb-16 max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-semibold tracking-tight mb-4">
          Everything you need, nothing you don't.
        </h2>
        <p class="text-muted-foreground">
          Built to get out of your way so you can focus on creating great
          content.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-5">
        <!-- Feature 1 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/2"
        >
          <div
            class="size-10 rounded-lg bg-blue-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-blue-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Media Management</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Upload and organize images in a centralized, blazing fast library.
          </p>
        </div>

        <!-- Feature 2 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/2"
        >
          <div
            class="size-10 rounded-lg bg-green-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-green-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Intuitive Editor</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            A distraction-free writing experience that just works.
          </p>
        </div>

        <!-- Feature 3 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/2"
        >
          <div
            class="size-10 rounded-lg bg-purple-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-purple-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Collaboration</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Invite your team and manage roles effortlessly.
          </p>
        </div>

        <!-- Feature 4 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/2"
        >
          <div
            class="size-10 rounded-lg bg-emerald-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-emerald-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">Astra AI</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Write blog posts with agent AI features.
          </p>
        </div>

        <!-- Feature 5 -->
        <div
          class="group p-6 rounded-xl border border-border/60 bg-background transition-all duration-300 hover:border-border hover:shadow-lg hover:shadow-black/2 md:col-span-2"
        >
          <div
            class="size-10 rounded-lg bg-rose-500/10 flex items-center justify-center mb-5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-rose-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
              ></path>
            </svg>
          </div>
          <h3 class="text-base font-medium mb-2">API Integration</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Seamless integration with Next.js, Astro, Nuxt, and any other modern
            web framework. Fetch content comfortably.
          </p>
        </div>
      </div>
    </Container>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 md:py-28 bg-muted/30 border-t border-border/50">
    <Container class="max-w-3xl">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-semibold tracking-tight mb-4">
          Frequently Asked Questions
        </h2>
      </div>
      <div
        class="divide-y divide-border/60 border-y border-border/60 bg-background rounded-xl"
      >
        {
          FAQs.map((faq) => (
            <AccordionItem name="faq" title={faq.question} class="px-6">
              <div
                class="text-muted-foreground text-sm leading-relaxed"
                set:html={faq.answer}
              />
            </AccordionItem>
          ))
        }
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 border-t border-border/50">
    <Container>
      <div
        class="relative overflow-hidden rounded-2xl bg-[#584dff] px-6 py-14 md:px-12 md:py-20 text-center"
      >
        <div
          class="absolute inset-0 z-0"
          style={{
            background:
              "radial-gradient(ellipse 80% 60% at 50% 0%, rgba(120, 180, 255, 0.25), transparent 70%), #584dff",
          }}
        ></div>

        <div class="relative z-10 max-w-xl mx-auto space-y-6">
          <h2
            class="text-2xl md:text-4xl font-semibold tracking-tight text-background"
          >
            Ready to start writing?
          </h2>
          <p class="text-background/70 text-base">
            Join developers and teams who trust AstraCMS for their content
            needs.
          </p>
          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-3 pt-2"
          >
            <a
              href={`${SITE.APP_URL}/register`}
              class="inline-flex h-11 items-center justify-center rounded-lg bg-background px-7 text-sm font-medium text-foreground transition-all duration-300 hover:bg-background/90"
            >
              Start for free
            </a>
          </div>
          <p class="text-xs text-background/50">No credit card required</p>
        </div>
      </div>
    </Container>
  </section>
</Layout>
