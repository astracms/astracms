---
import Container from "@/components/Container.astro";
import AccordionItem from "@/components/ui/AccordionItem.astro";
import Layout from "@/layouts/Layout.astro";
import { PRICING, PRICING_FAQS } from "@/lib/constants";
import { cn } from "@/lib/utils";
---

<Layout
  title="Pricing - AstraCMS | Free & Paid Plans for Teams"
  description="Choose the right Astra plan for your team. Free tier for hobbyists, Pro for small teams, Enterprise for growing organizations. API access, AI features, and unlimited posts."
>
  <section class="pt-20 md:pt-28 pb-20 md:pb-24">
    <Container class="space-y-14 md:space-y-16">
      <div class="flex flex-col items-center space-y-4 text-center">
        <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">
          Pricing
        </h1>
        <p class="max-w-md text-muted-foreground">
          Simple pricing, cancel anytime.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-5 max-w-3xl mx-auto">
        {
          PRICING.map((plan, index) => (
            <div
              class={cn(
                "relative flex flex-col p-6 rounded-xl border transition-all duration-300",
                index === 1
                  ? "border-foreground/20 bg-foreground/[0.02] shadow-lg shadow-black/[0.03]"
                  : "border-border/60 bg-background hover:border-border",
              )}
            >
              {index === 1 && (
                <span class="absolute -top-3 left-1/2 -translate-x-1/2 bg-foreground text-background px-3 py-1 text-xs font-medium rounded-full">
                  Popular
                </span>
              )}

              <h2 class="text-lg font-medium mb-1">{plan.title}</h2>
              <p class="text-sm text-muted-foreground mb-5">
                {plan.description}
              </p>

              <div class="mb-6">
                <span class="text-3xl font-semibold">{plan.price.monthly}</span>
                <span class="text-muted-foreground text-sm"> per month</span>
              </div>

              <a
                href={plan.button.href}
                target="_blank"
                rel="noopener"
                class={cn(
                  "inline-flex w-full items-center justify-center rounded-lg px-4 py-2.5 text-sm font-medium transition-all duration-300 mb-6",
                  index === 1
                    ? "bg-foreground text-background hover:bg-foreground/90"
                    : "bg-muted text-foreground hover:bg-muted/80",
                )}
              >
                {plan.button.label}
              </a>

              <ul class="space-y-2.5 text-sm">
                {plan.features.map((feature) => (
                  <li class="flex items-center gap-2.5">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      class="size-4 text-emerald-500 shrink-0"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-muted-foreground">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </Container>
  </section>

  <!-- FAQ -->
  <section class="py-20 md:py-24 bg-muted/30 border-t border-border/50">
    <Container class="space-y-12 max-w-3xl">
      <div class="flex flex-col items-center space-y-4 text-center">
        <h2 class="text-2xl md:text-3xl font-semibold tracking-tight">
          Frequently Asked Questions
        </h2>
        <p class="text-muted-foreground">
          Answers to common questions about pricing and billing.
        </p>
      </div>

      <div
        class="divide-y divide-border/60 border-y border-border/60 bg-background rounded-xl"
      >
        {
          PRICING_FAQS.map((faq) => (
            <AccordionItem name="details" title={faq.question} class="px-6">
              <p
                class="text-sm text-muted-foreground leading-relaxed [&>a]:text-foreground hover:[&>a]:text-muted-foreground [&>a]:underline [&>a]:underline-offset-2"
                set:html={faq.answer}
              />
            </AccordionItem>
          ))
        }
      </div>
    </Container>
  </section>
</Layout>
