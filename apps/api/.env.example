# AstraCMS API Environment Variables
# Copy this file to .env for local development

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/astracms

# Redis (Upstash)
REDIS_URL=https://your-redis-url.upstash.io
REDIS_TOKEN=your-redis-token

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Railway Production Example:
# NODE_ENV=production
# PORT=8000
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# REDIS_URL=${{Redis.REDIS_URL}}
# REDIS_TOKEN=${{Redis.REDIS_TOKEN}}
# CORS_ORIGINS=https://astracms.com,https://blog.astracms.com
