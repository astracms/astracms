{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "DIRECT_URL",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "RESEND_API_KEY",
        "RESEND_AUDIENCE_ID",
        "CLOUDFLARE_ACCESS_KEY_ID",
        "CLOUDFLARE_SECRET_ACCESS_KEY",
        "CLOUDFLARE_BUCKET_NAME",
        "CLOUDFLARE_TOKEN",
        "CLOUDFLARE_S3_ENDPOINT",
        "CLOUDFLARE_PUBLIC_URL",
        "CREEM_API_KEY",
        "CREEM_WEBHOOK_SECRET",
        "NEXT_PUBLIC_CREEM_HOBBY_PRODUCT_ID",
        "NEXT_PUBLIC_CREEM_PRO_PRODUCT_ID",
        "NEXT_PUBLIC_CREEM_ENTERPRISE_PRODUCT_ID",
        "CREEM_SUCCESS_URL",
        "ASTRACMS_API_KEY",
        "ASTRA_API_URL",
        "QSTASH_TOKEN",
        "REDIS_URL",
        "REDIS_TOKEN",
        "OPENAI_API_KEY",
        "OPENROUTER_API_KEY",
        "AI_SDK_LOG_WARNINGS",
        "ZENMUX_API_KEY",
        "TAVILY_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "//#format-lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
